@model List<StudentEnrollmentSystem.Models.ViewModels.CourseScheduleViewModel>

@{
    ViewData["Title"] = "Course Schedule";
}

<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                    Course Schedule
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    Your weekly class schedule for enrolled courses.
                </p>
            </div>

            @if (!Model.Any())
            {
                <div class="px-4 py-5 sm:p-6">
                    <p class="text-gray-500">You are not enrolled in any courses yet.</p>
                </div>
            }
            else
            {
                <div class="border-t border-gray-200">
                    @{
                        var groupedSchedules = Model.GroupBy(s => s.TimeSlots).OrderBy(g => g.Key);
                    }

                    @foreach (var dayGroup in groupedSchedules)
                    {
                        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">
                                @dayGroup.Key.ToString()
                            </dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                <div class="space-y-4">
                                    @foreach (var schedule in dayGroup.OrderBy(s => s.TimeSlots.FirstOrDefault()?.StartTime))
                                    {
                                        <div class="bg-white shadow rounded-lg p-4">
                                            <div class="flex justify-between items-start">
                                                <div>
                                                    <h4 class="text-lg font-medium text-gray-900">@schedule.CourseCode</h4>
                                                    <p class="text-sm text-gray-500">@schedule.CourseName</p>
                                                </div>
                                                <div class="text-right">
                                                    <p class="text-sm font-medium text-gray-900">@schedule.TimeSlots</p>
                                                    <p class="text-sm text-gray-500">Room @schedule.Room</p>
                                                </div>
                                            </div>
                                            <div class="mt-2">
                                                <p class="text-sm text-gray-600">
                                                    <span class="font-medium">Instructor:</span> @schedule.InstructorName
                                                </p>
                                                @if (!string.IsNullOrEmpty(schedule.Notes))
                                                {
                                                    <p class="mt-1 text-sm text-gray-500">@schedule.Notes</p>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </dd>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript for interactivity here
    </script>
}

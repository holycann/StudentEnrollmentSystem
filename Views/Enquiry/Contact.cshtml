@model StudentEnrollmentSystem.Models.ViewModels.EnquiryViewModel

@{
    ViewData["Title"] = "Contact Us";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="max-w-3xl mx-auto">
        <div class="text-center">
            <h1 class="text-3xl font-bold text-gray-900">Contact Us</h1>
            <p class="mt-2 text-sm text-gray-600">
                Have a question? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
            </p>
        </div>

        <div class="mt-12">
            <form asp-action="Contact" method="post" class="space-y-8">
                <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>

                <div>
                    <label asp-for="Subject" class="block text-sm font-medium text-gray-700">Subject</label>
                    <div class="mt-1">
                        <input asp-for="Subject" type="text" class="form-input block w-full" />
                        <span asp-validation-for="Subject" class="mt-1 text-sm text-red-600"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Message" class="block text-sm font-medium text-gray-700">Message</label>
                    <div class="mt-1">
                        <textarea asp-for="Message" rows="4" class="form-textarea block w-full"></textarea>
                        <span asp-validation-for="Message" class="mt-1 text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="flex justify-end space-x-4">
                    <a asp-action="History" class="btn-secondary">Cancel</a>
                    <button type="submit" class="btn-primary">Send Message</button>
                </div>
            </form>
        </div>

        <div class="mt-12">
            <div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
                <div class="relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400">
                    <div class="flex-shrink-0">
                        <svg class="h-10 w-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                    </div>
                    <div class="flex-1 min-w-0">
                        <span class="absolute inset-0" aria-hidden="true"></span>
                        <p class="text-sm font-medium text-gray-900">Call us</p>
                        <p class="text-sm text-gray-500">Mon-Fri from 8am to 5pm</p>
                        <p class="text-sm font-medium text-primary-600">+1 (555) 123-4567</p>
                    </div>
                </div>

                <div class="relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400">
                    <div class="flex-shrink-0">
                        <svg class="h-10 w-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <div class="flex-1 min-w-0">
                        <span class="absolute inset-0" aria-hidden="true"></span>
                        <p class="text-sm font-medium text-gray-900">Email us</p>
                        <p class="text-sm text-gray-500">We'll respond within 24 hours</p>
                        <p class="text-sm font-medium text-primary-600">support@example.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

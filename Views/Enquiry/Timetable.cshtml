@model StudentEnrollmentSystem.Models.ViewModels.TimetableViewModel

@{
    ViewData["Title"] = "My Timetable";
    var days = new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday" };
    var timeSlots = Enumerable.Range(8, 12).Select(h => new TimeSpan(h, 0, 0)); // 8 AM to 7 PM
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
            <h1 class="text-3xl font-semibold text-gray-900">My Timetable</h1>
            <p class="mt-2 text-sm text-gray-700">
                View your current class schedule and plan your time effectively.
            </p>
        </div>
    </div>

    <!-- Timetable Grid -->
    <div class="mt-8 flex flex-col">
        <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle">
                <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-300">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">
                                    Time
                                </th>
                                @foreach (var day in days)
                                {
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                        @day
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 bg-white">
                            @foreach (var time in timeSlots)
                            {
                                <tr>
                                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                                        @time.ToString("hh:mm tt")
                                    </td>
                                    @foreach (var day in days)
                                    {
                                        <td class="px-3 py-4 text-sm text-gray-500">
                                            @{
                                                var slots = Model.Schedule[day]
                                                    .Where(s => s.StartTime <= time && s.EndTime > time)
                                                    .ToList();

                                                foreach (var slot in slots)
                                                {
                                                    var course = Model.Courses.First(c => 
                                                        c.TimeSlots.Any(ts => 
                                                            ts.Day.ToString() == day && 
                                                            ts.StartTime == slot.StartTime && 
                                                            ts.EndTime == slot.EndTime));

                                                    <div class="rounded-md bg-primary-50 p-2 mb-1">
                                                        <p class="text-xs font-medium text-primary-700">@course.CourseCode</p>
                                                        <p class="text-xs text-primary-500">@slot.Room (@slot.Type)</p>
                                                    </div>
                                                }
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Course List -->
    <div class="mt-8">
        <h2 class="text-lg font-medium text-gray-900">Enrolled Courses</h2>
        <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
            @foreach (var course in Model.Courses)
            {
                <div class="relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm hover:border-gray-400">
                    <div>
                        <h3 class="text-sm font-medium text-gray-900">@course.CourseCode - @course.CourseName</h3>
                        <div class="mt-2">
                            @foreach (var slot in course.TimeSlots)
                            {
                                <div class="flex items-center text-sm text-gray-500 mt-1">
                                    <svg class="mr-1.5 h-4 w-4 flex-shrink-0 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    @slot.Day.ToString(): @slot.StartTime.ToString("hh:mm tt") - @slot.EndTime.ToString("hh:mm tt")
                                    <span class="ml-1.5 text-xs text-gray-400">(@slot.Room)</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript for timetable interactivity here
    </script>
}

@model StudentEnrollmentSystem.Models.ViewModels.ChangePasswordViewModels

<div class="max-w-xl mx-auto mt-10 bg-white p-8 rounded-2xl shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Change Password</h2>

    <form method="post" class="space-y-6">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Current Password</label>
            <input asp-for="CurrentPassword" type="password"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="CurrentPassword" class="text-sm text-red-600 mt-1 block"></span>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
            <input asp-for="NewPassword" type="password"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="NewPassword" class="text-sm text-red-600 mt-1 block"></span>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Confirm New Password</label>
            <input asp-for="ConfirmPassword" type="password"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600 mt-1 block"></span>
        </div>

        <div class="flex justify-end">
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
                Change Password
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

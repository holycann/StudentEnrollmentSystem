@model List<StudentEnrollmentSystem.Models.ClassSchedule>

<div class="max-w-4xl mx-auto mt-10 p-6 bg-white rounded-2xl shadow-lg">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Class Timetable</h2>

    <div class="overflow-x-auto">
        <table class="min-w-full border border-gray-200 text-sm text-left text-gray-700">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-3 border-b">Day</th>
                    <th class="px-4 py-3 border-b">Time</th>
                    <th class="px-4 py-3 border-b">Course</th>
                    <th class="px-4 py-3 border-b">Lecturer</th>
                    <th class="px-4 py-3 border-b">Room</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50 transition">
                        <td class="px-4 py-2 border-b">@item.Day</td>
                        <td class="px-4 py-2 border-b">@item.Time</td>
                        <td class="px-4 py-2 border-b">@item.Course</td>
                        <td class="px-4 py-2 border-b">@item.Lecturer</td>
                        <td class="px-4 py-2 border-b">@item.Room</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model StudentEnrollmentSystem.Models.ViewModels.StatementViewModel
@using StudentEnrollmentSystem.Models.Enums

@{
    ViewData["Title"] = "Financial Statement";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
            <h1 class="text-3xl font-semibold text-gray-900">Financial Statement</h1>
            <p class="mt-2 text-sm text-gray-700">
                View your current financial statement and registration summary.
            </p>
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
            <a asp-action="Download" class="btn-primary">
                Download PDF
            </a>
        </div>
    </div>

    <!-- Student Information -->
    <div class="mt-8 bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <div class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Student Name</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.StudentName</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Student ID</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.StudentId</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Program</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Program</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Email</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.StudentEmail</dd>
                </div>
            </div>
        </div>
    </div>

    <!-- Financial Summary -->
    <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-3">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Fees</dt>
                            <dd class="text-lg font-medium text-gray-900">$@Model.TotalFees.ToString("N2")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Paid</dt>
                            <dd class="text-lg font-medium text-gray-900">$@Model.TotalPaid.ToString("N2")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Balance</dt>
                            <dd class="text-lg font-medium text-gray-900">$@Model.Balance.ToString("N2")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Registration Summary -->
    <div class="mt-8">
        <h2 class="text-lg font-medium text-gray-900">Registration Summary</h2>
        <div class="mt-4 bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <div class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2 lg:grid-cols-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Academic Term</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Registration.AcademicTerm</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Total Credits</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Registration.TotalCredits</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Total Courses</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Registration.TotalCourses</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Registration Date</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Registration.RegistrationDate.ToString("MMM dd, yyyy")</dd>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Enrolled Courses -->
    <div class="mt-8">
        <h2 class="text-lg font-medium text-gray-900">Enrolled Courses</h2>
        <div class="mt-4 flex flex-col">
            <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
                    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                        <table class="min-w-full divide-y divide-gray-300">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Course</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Credits</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Fee</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Schedule</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 bg-white">
                                @foreach (var enrollment in Model.Enrollments)
                                {
                                    <tr>
                                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                                            <div class="font-medium text-gray-900">@enrollment.CourseCode</div>
                                            <div class="text-gray-500">@enrollment.CourseName</div>
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">@enrollment.Credits</td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">$@enrollment.Fee.ToString("N2")</td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm">
                                            @{
                                                var (statusColor, statusText) = enrollment.Status switch
                                                {
                                                    (EnrollmentStatus)EnrollmentStatus.Pending => ("yellow", "Pending"),
                                                    (EnrollmentStatus)EnrollmentStatus.Active => ("green", "Approved"),
                                                    (EnrollmentStatus)EnrollmentStatus.Dropped => ("red", "Dropped"),
                                                    _ => ("gray", enrollment.Status.ToString())
                                                };
                                            }
                                            <span class="inline-flex rounded-full bg-@(statusColor)-100 px-2 text-xs font-semibold leading-5 text-@(statusColor)-800">
                                                @statusText
                                            </span>
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                            @foreach (var slot in enrollment.Schedule)
                                            {
                                                <div class="text-xs">
                                                    @slot.Day.ToString(): @slot.StartTime.ToString("hh:mm tt") - @slot.EndTime.ToString("hh:mm tt")
                                                    <span class="text-gray-400">(@slot.Room)</span>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment History -->
    <div class="mt-8">
        <h2 class="text-lg font-medium text-gray-900">Payment History</h2>
        <div class="mt-4 flex flex-col">
            <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
                    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                        <table class="min-w-full divide-y divide-gray-300">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Transaction ID</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Amount</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Method</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 bg-white">
                                @foreach (var payment in Model.Payments)
                                {
                                    <tr>
                                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                                            @payment.TransactionId
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                            @payment.PaymentDate.ToString("MMM dd, yyyy")
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                                            $@payment.Amount.ToString("N2")
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                            @payment.PaymentMethod
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm">
                                            @{
                                                var (statusColor, statusText) = payment.Status switch
                                                {
                                                    (PaymentStatus)PaymentStatus.Pending => ("yellow", "Pending"),
                                                    (PaymentStatus)PaymentStatus.Completed => ("green", "Completed"),
                                                    (PaymentStatus)PaymentStatus.Failed => ("red", "Failed"),
                                                    (PaymentStatus)PaymentStatus.Refunded => ("gray", "Refunded"),
                                                    _ => ("gray", payment.Status.ToString())
                                                };
                                            }
                                            <span class="inline-flex rounded-full bg-@(statusColor)-100 px-2 text-xs font-semibold leading-5 text-@(statusColor)-800">
                                                @statusText
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

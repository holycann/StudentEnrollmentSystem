@model StudentEnrollmentSystem.Models.ViewModels.StatementViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Financial Statement - @Model.StudentName</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            color: #333;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo {
            max-width: 200px;
            margin-bottom: 20px;
        }

        .student-info {
            margin-bottom: 30px;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 5px;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }

        .section {
            margin-bottom: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .summary-box {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .total-row {
            font-weight: bold;
            background-color: #f8f9fa;
        }

        .status-badge {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 12px;
        }

        .status-pending { background-color: #fff3cd; color: #856404; }
        .status-approved { background-color: #d4edda; color: #155724; }
        .status-completed { background-color: #d4edda; color: #155724; }
        .status-failed { background-color: #f8d7da; color: #721c24; }
        .status-dropped { background-color: #f8d7da; color: #721c24; }
        .status-refunded { background-color: #e2e3e5; color: #383d41; }
    </style>
</head>
<body>
    <div class="header">
        <h1>Student Financial Statement</h1>
        <p>Generated on @Model.GeneratedDate.ToString("MMMM dd, yyyy")</p>
    </div>

    <div class="student-info">
        <div class="info-grid">
            <div>
                <strong>Student Name:</strong> @Model.StudentName<br />
                <strong>Student ID:</strong> @Model.StudentId<br />
            </div>
            <div>
                <strong>Program:</strong> @Model.Program<br />
                <strong>Email:</strong> @Model.StudentEmail<br />
            </div>
        </div>
    </div>

    <div class="section">
        <div class="summary-box">
            <h3>Financial Summary</h3>
            <div class="info-grid">
                <div><strong>Total Fees:</strong> $@Model.TotalFees.ToString("N2")</div>
                <div><strong>Total Paid:</strong> $@Model.TotalPaid.ToString("N2")</div>
                <div><strong>Balance:</strong> $@Model.Balance.ToString("N2")</div>
            </div>
        </div>
    </div>

    <div class="section">
        <h3>Registration Summary</h3>
        <div class="summary-box">
            <div class="info-grid">
                <div><strong>Academic Term:</strong> @Model.Registration.AcademicTerm</div>
                <div><strong>Total Credits:</strong> @Model.Registration.TotalCredits</div>
                <div><strong>Total Courses:</strong> @Model.Registration.TotalCourses</div>
                <div><strong>Registration Date:</strong> @Model.Registration.RegistrationDate.ToString("MMM dd, yyyy")</div>
            </div>
        </div>
    </div>

    <div class="section">
        <h3>Enrolled Courses</h3>
        <table>
            <thead>
                <tr>
                    <th>Course</th>
                    <th>Credits</th>
                    <th>Fee</th>
                    <th>Status</th>
                    <th>Schedule</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model.Enrollments)
                {
                    <tr>
                        <td>
                            <strong>@enrollment.CourseCode</strong><br />
                            @enrollment.CourseName
                        </td>
                        <td>@enrollment.Credits</td>
                        <td>$@enrollment.Fee.ToString("N2")</td>
                        <td>
                            <span class="status-badge status-@enrollment.Status.ToString().ToLower()">
                                @enrollment.Status
                            </span>
                        </td>
                        <td>
                            @foreach (var slot in enrollment.Schedule)
                            {
                                <div>
                                    @slot.Day.ToString(): @slot.StartTime.ToString("hh:mm tt") - @slot.EndTime.ToString("hh:mm tt")
                                    (@slot.Room)
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="section">
        <h3>Payment History</h3>
        <table>
            <thead>
                <tr>
                    <th>Transaction ID</th>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Method</th>
                    <th>Status</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model.Payments)
                {
                    <tr>
                        <td>@payment.TransactionId</td>
                        <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                        <td>$@payment.Amount.ToString("N2")</td>
                        <td>@payment.PaymentMethod</td>
                        <td>
                            <span class="status-badge status-@payment.Status.ToString().ToLower()">
                                @payment.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="text-align: center; margin-top: 40px; font-size: 12px; color: #666;">
        <p>This is a computer-generated document. No signature is required.</p>
        <p>For any queries, please contact the finance department.</p>
    </div>
</body>
</html>

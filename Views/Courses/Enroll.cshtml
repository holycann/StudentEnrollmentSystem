@model StudentEnrollmentSystem.Models.ViewModels.EnrollmentRequestViewModel

@{
    ViewData["Title"] = "Course Enrollment";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="max-w-3xl mx-auto">
        <div class="bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                    Enroll in @Model.Course.Name
                </h3>
                <div class="mt-2 max-w-xl text-sm text-gray-500">
                    <p>Please review the course details and confirm your enrollment.</p>
                </div>

                <div class="mt-5 border-t border-gray-200">
                    <dl class="divide-y divide-gray-200">
                        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500">Course Code</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Model.Course.CourseCode</dd>
                        </div>
                        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500">Credits</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Model.Course.Credits</dd>
                        </div>
                        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500">Available Seats</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Model.Course.AvailableSeats</dd>
                        </div>
                        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500">Fee</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Model.TotalFee.ToString("C")</dd>
                        </div>
                    </dl>
                </div>

                @if (!Model.HasPrerequisites)
                {
                    <div class="mt-5">
                        <div class="rounded-md bg-yellow-50 p-4">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-yellow-800">
                                        Prerequisites Not Met
                                    </h3>
                                    <div class="mt-2 text-sm text-yellow-700">
                                        <p>You must complete the following courses before enrolling:</p>
                                        <ul class="list-disc pl-5 mt-1 space-y-1">
                                            @foreach (var prereq in Model.MissingPrerequisites)
                                            {
                                                <li>@prereq</li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="mt-5 flex justify-between">
                    <a asp-action="Details" asp-route-id="@Model.CourseId" class="btn-secondary">
                        Back to Details
                    </a>
                    @if (Model.HasPrerequisites && Model.Course.AvailableSeats > 0)
                    {
                        <form asp-action="Enroll" method="post">
                            <input type="hidden" name="id" value="@Model.CourseId" />
                            <button type="submit" class="btn-primary">
                                Confirm Enrollment
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

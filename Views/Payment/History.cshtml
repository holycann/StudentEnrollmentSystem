@model StudentEnrollmentSystem.Models.ViewModels.PaymentHistoryViewModel
@using StudentEnrollmentSystem.Models.Enums

@{
    ViewData["Title"] = "Payment History";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
            <h1 class="text-3xl font-semibold text-gray-900">Payment History</h1>
            <p class="mt-2 text-sm text-gray-700">
                View your payment history and manage your transactions.
            </p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Total Paid -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <dt class="text-sm font-medium text-gray-500 truncate">
                    Total Amount Paid
                </dt>
                <dd class="mt-1 text-3xl font-semibold text-gray-900">
    using StudentEnrollmentSystem.Models.ViewModels;
                    @Model.TotalPaid.ToString("C")
                </dd>
            </div>
        </div>

        <!-- Pending Payments -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <dt class="text-sm font-medium text-gray-500 truncate">
                    Pending Payments
                </dt>
                <dd class="mt-1 text-3xl font-semibold text-gray-900">
                    @Model.PendingPayments.ToString("C")
                </dd>
            </div>
        </div>

        <!-- Total Transactions -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <dt class="text-sm font-medium text-gray-500 truncate">
                    Total Transactions
                </dt>
                <dd class="mt-1 text-3xl font-semibold text-gray-900">
                    @Model.Payments.Count()
                </dd>
            </div>
        </div>
    </div>

    <!-- Payment List -->
    @if (Model.Payments.Any())
    {
        <div class="mt-8 flex flex-col">
            <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
                    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                        <table class="min-w-full divide-y divide-gray-300">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Course</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Amount</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Transaction ID</th>
                                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                                        <span class="sr-only">Actions</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 bg-white">
                                @foreach (var payment in Model.Payments)
                                {
                                    <tr>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                            @payment.PaymentDate.ToString("MMM dd, yyyy")
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                                            @payment.Enrollment.Course.CourseCode - @payment.Enrollment.Course.Name
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                            @payment.Amount.ToString("C")
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm">
                                            @{
                                                var (statusColor, statusText) = payment.Status switch
                                                {
                                                    PaymentStatus.Completed => ("green", "Completed"),
                                                    PaymentStatus.Pending => ("yellow", "Pending"),
                                                    PaymentStatus.Failed => ("red", "Failed"),
                                                    PaymentStatus.Refunded => ("gray", "Refunded"),
                                                    _ => ("gray", payment.Status.ToString())
                                                };
                                            }
                                            <span class="inline-flex rounded-full bg-@(statusColor)-100 px-2 text-xs font-semibold leading-5 text-@(statusColor)-800">
                                                @statusText
                                            </span>
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                            @payment.TransactionId
                                        </td>
                                        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                                            @if (payment.Status == PaymentStatus.Completed)
                                            {
                                                <form asp-action="Refund" asp-route-paymentId="@payment.Id" method="post" class="inline">
                                                    <button type="submit" 
                                                            class="text-red-600 hover:text-red-900"
                                                            onclick="return confirm('Are you sure you want to request a refund? This will also drop the course.')">
                                                        Request Refund
                                                    </button>
                                                </form>
                                            }
                                            else if (payment.Status == PaymentStatus.Failed)
                                            {
                                                <a asp-action="Process" asp-route-enrollmentId="@payment.EnrollmentId" class="text-primary-600 hover:text-primary-900">
                                                    Try Again
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center mt-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No payment history</h3>
            <p class="mt-1 text-sm text-gray-500">Once you make payments, they will appear here.</p>
        </div>
    }
</div>

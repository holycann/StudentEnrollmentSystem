@{
    ViewData["Title"] = "Payment Success";
}


<div id="loading" class="text-center">
    <div class="flex justify-center mb-4">
        <div class="w-16 h-16 border-4 border-blue-500 border-t-transparent rounded-full animate-spin"></div>
    </div>
    <p class="text-gray-600">Processing your payment...</p>
</div>
<div id="thankyou" class="text-center hidden">
    <div class="flex justify-center mb-4">
        <div class="w-16 h-16 border-4 border-green-500 rounded-full flex items-center justify-center">
            <i class="fas fa-check text-green-500 text-3xl"></i>
        </div>
    </div>
    <h1 class="text-4xl font-pacifico text-navy-900 mb-2">Thank you!</h1>
    <p class="text-gray-600 mb-6">Your payment has been successfully.</p>
    <button id="return-home" class="bg-navy-900 py-2 px-6 rounded-full">Return Home</button>
</div>

<script>
    setTimeout(() => {
        document.getElementById("loading").classList.add("hidden");
        document.getElementById("thankyou").classList.remove("hidden");
    }, 3000); // 3 seconds delay

    document.getElementById("return-home").addEventListener("click", function () {
        window.location.href = "/";
    });
</script>
